@model HMS.Areas.Dashboard.ViewModel.AccomodationTypesListingModel


    @if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count() > 0)
    {
        <table class="table table-striped table-hover py-2">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var accomodationType in Model.AccomodationTypes)
                {
                    <tr>
                        <td class="px-3">@accomodationType.Name</td>
                        <td>@accomodationType.Description</td>
                        <td>
                            <button data-href="@Url.Action("Action","AccomodationTypes", new {ID=accomodationType.Id })" 
                                    type="button" class="actionBtn btn btn-outline-info"
                                    data-bs-toggle="modal" data-bs-target="#actionModal">
                            <i class="lni lni-pencil-alt"></i></button>

                            <button type="button"  class="deleteBtn btn btn-outline-warning"
                                    data-href="@Url.Action("Delete","AccomodationTypes", new {ID=accomodationType.Id})">
                            <i class="icofont-ui-delete"></i></button>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <span class="text-uppercase">Sorry!</span> No record found
        </div>
    }

