@model HMS.Areas.Dashboard.ViewModel.AccomodationTypesListingModel;

@if (Model != null)
{


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
               
            </tr>
        </thead>
        <tbody>

            @foreach (var accomodationType in Model.AccomodationTypes)
            {
                <tr>
                    
                    <td>@accomodationType.Name</td>
                    <td>@accomodationType.Description</td>
                    <td>
                        <a href="#" type="button" class="btn btn-outline-info"><i class="lni lni-pencil-alt"></i></a>
                        <a href="#" type="button" class="btn btn-outline-warning"><i class="icofont-ui-delete"></i></a>
                    </td>
                </tr>
            }

            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td colspan="2">Larry the Bird</td>
                <td>@twitter</td>
            </tr>
        </tbody>
    </table>
}